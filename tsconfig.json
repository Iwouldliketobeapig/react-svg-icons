{
  "compilerOptions": {
    "jsx": "react",
    "incremental": true,
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "typeRoots": ["./node_modules/@types"],
  },
  "exclude": ["**/node_modules", "./svgs"]
}